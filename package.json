{
    "name": "pfx",
    "version": "1.1.2-rc2",
    "description": "ParadoxFX - Multi-screen audio/video effects system for Raspberry Pi",
    "main": "pfx.js",
    "scripts": {
        "start": "node pfx.js",
        "dev": "LOG_LEVEL=debug node pfx.js",
        "debug": "LOG_LEVEL=debug node pfx.js",
        "test": "jest",
        "test:unit": "jest test/unit",
        "test:integration": "jest test/integration",
        "test:media": "jest test/integration/media-playback.test.js",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "test:ci": "SKIP_INTEGRATION_TESTS=1 jest --coverage --ci",
        "test:manual": "ENABLE_REAL_PLAYBACK=true jest test/manual/ --verbose --runInBand",
        "check-media": "node -e \"const fs=require('fs'); const path='media/test'; console.log('Media files:', fs.existsSync(path) ? fs.readdirSync(path).filter(f=>!f.startsWith('.')).join(', ') : 'Directory not found');\"",
        "lint": "echo 'No linter configured yet'",
        "validate": "node -c pfx.js"
    },
    "keywords": [
        "mqtt",
        "media",
        "effects",
        "raspberry-pi",
        "escape-room",
        "interactive"
    ],
    "author": "Paradox",
    "license": "ISC",
    "dependencies": {
        "ini": "^4.1.1",
        "mqtt": "^5.13.2",
        "node-mpv": "^1.5.0"
    },
    "devDependencies": {
        "aedes": "^0.51.2",
        "jest": "^29.7.0",
        "jest-junit": "^16.0.0",
        "ajv": "^8.17.1"
    },
    "engines": {
        "node": ">=15.1.0"
    }
}