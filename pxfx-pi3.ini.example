# PxFx Pi3 Configuration Example
# Optimized for Raspberry Pi 3 with Bullseye (Legacy) and hardware acceleration

[global]
MQTT_SERVER=localhost
MQTT_PORT=1883
HEARTBEAT_TOPIC=paradox/heartbeat
HEARTBEAT_INTERVAL_MS=30000
DEVICE_NAME=pxfx-pi3
IP_ADDRESS=auto

# Pi3-optimized screen device
[ScreenA]
DEVICE_TYPE=screen
BASE_TOPIC=Paradox/Room/ScreenA
STATUS_TOPIC=Paradox/Room/ScreenA/status
DISPLAY=:0
MEDIA_DIR=/opt/paradox/media

# Pi3-specific audio configuration
AUDIO_CHANNEL_MAP=default
VOLUME=75

# Pi3-optimized media player settings
VIDEO_PLAYER=mpv
VIDEO_QUEUE_MAX=3
AUDIO_QUEUE_MAX=5
TRANSITION_DELAY_MS=500

# Hardware acceleration options for Pi3
MPV_VIDEO_OPTIONS=--hwdec=mmal --vo=gpu --cache=yes --cache-secs=10 --profile=gpu-hq
MPV_AUDIO_OPTIONS=--no-video --quiet --no-terminal

# VLC fallback configuration
VLC_VIDEO_OPTIONS=--intf dummy --fullscreen --no-audio-display --codec=avcodec --avcodec-hw=mmal
VLC_AUDIO_OPTIONS=--intf dummy --no-video

# FBI image display options
FBI_IMAGE_OPTIONS=--noverbose --autozoom

# Performance tuning for Pi3
MAX_CONCURRENT_VIDEOS=1
MAX_CONCURRENT_AUDIO=2
ENABLE_HARDWARE_ACCELERATION=true
PREFER_H264_CODEC=true
